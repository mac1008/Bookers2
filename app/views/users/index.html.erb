<body>
  <header>

  </header>

  <maim>
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <h2>User info</h2>
          <table>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
            <%= link_to "アイコン入れる", 'edit_user_path' %>
          </table>

          <h2>New book</h2>
          <%= form_with model: @book do |f| %>
            <p>Title</p>
            <%= f.text_field :title %>
            <p>Opinion</p>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
          <% end %>
        </div>

        <div class="col-lg-8">
          <h2>Users</h2>
           <table>
             <tr>
               <th>image</th>
               <th>name</th>
             </tr>
             <% @users.each do |user| %>
             <tr>
               <th><%= user.name %></th>
               <th><%= user.introduction %></th>
               <th><%= link_to "Show", user_path(user.id) %></th>
             </tr>
             <% end %>
           </table>

        </div>
      </div>

    </div>
  </maim>

  <footer>
    <p>CopyRight Infratop.inc</p>
  </footer>
</body>