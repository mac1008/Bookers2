<body>
  <header>

  </header>

  <maim>
    <div>
      <%= flash[:notice] %>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <h2>User info</h2>
          <table>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th><%= @book.user.introduction %></th>
              <th></th>
            </tr>
            <%= link_to "アイコン入れる", edit_user_path(@book.user.id) %>
          </table>

          <h2>New book</h2>
          <% if @book.errors.any? %>
            <%= @book.errors.count %>errors prohibited this obj from being saved:
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

          <%= form_with model: @book_new do |f| %>
            <p>Title</p>
            <%= f.text_field :title %>
            <p>Opinion</p>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
          <% end %>
        </div>

        <div class="col-lg-8">
          <h2>Book detail</h2>
           <table>
             <tr>
               <th><%= @book.title %></th>
               <th><%= @book.body %></th>
               <th><%= link_to "Edit",edit_book_path(@book.id) %></th>
               <th><%= link_to "Destroy","/books/#{@book.id}", method: :delete, "data-confirm" => "本当に消しますか？" %></th>
             </tr>
           </table>

        </div>
      </div>

    </div>
  </maim>

  <footer>
    <p>CopyRight Infratop.inc</p>
  </footer>
</body>