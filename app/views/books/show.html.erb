<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
      <meta name="viewport" content="width=device-width,initial-scale=1">
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <script src="https://kit.fontawesome.com/195c3a23e3.js" crossorigin="anonymous"></script>

      <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header>

    </header>

    <maim>
      <div>
        <%= flash[:notice] %>
      </div>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-lg-3">
            <h2>User info</h2>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <table class="table">
                <th>name</th>
                <th><%= @book.user.name %></th>
              </tr>
              <tr>
                <th><%= @book.user.introduction %></th>
                <th></th>
              </tr>
            </table>

            <div class="row">
              <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
              <i class="fa-solid fa-user-gear"></i>
              <% end %>
            </div>

            <h2 class="mt-3">New book</h2>
            <% if @book.errors.any? %>
              <%= @book.errors.count %>errors prohibited this obj from being saved:
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>

            <%= form_with model: @book_new do |f| %>
              <p>Title</p>
              <%= f.text_field :title %>
              <p>Opinion</p>
              <%= f.text_area :body %>
              <%= f.submit 'Create Book' %>
            <% end %>
          </div>

          <div class="col-lg-8 offset-md-1">
            <h2>Book detail</h2>
             <table class="table">
               <tr>
                 <th>
                   <%= image_tag @book.user.get_profile_image(100,100) %><br>
                   <%= link_to @book.user.name, user_path(@book.user.id) %>
                 </th>
                 <th><%= @book.title %></th>
                 <th><%= @book.body %></th>
                 <th>
                   <% if @book.user == current_user %>
                     <%= link_to "Edit",edit_book_path(@book.id) %></th>
                   <% end %>
                 </th>
                 <th>
                   <% if @book.user == current_user %>
                     <%= link_to "Destroy","/books/#{@book.id}", method: :delete, "data-confirm" => "本当に消しますか？" %>
                   <% end %>
                 </th>
               </tr>
             </table>

          </div>
        </div>

      </div>
    </maim>

  </body>

</html>