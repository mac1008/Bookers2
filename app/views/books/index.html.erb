<body>
  <header>

  </header>

  <maim>
    <div>
      <%= flash[:notice] %>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <h2>User info</h2>
          <table>
            <% if current_user.image.attached? %>
              <%= image_tag current_user.image, size: "100x100" %>
            <% else %>
              <%= image_tag 'NO_IMAGE', size: "100x100" %>
            <% end %>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
            <%= link_to "アイコン入れる", edit_user_path(current_user.id) %>
          </table>

          <h2>New book</h2>

          <%= form_with model: @book do |f| %>
            <p>Title</p>
            <%= f.text_field :title %>
            <p>Opinion</p>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
          <% end %>
        </div>

        <div class="col-lg-8">
          <h2>Books</h2>
           <table>
             <tr>
               <th>Title</th>
               <th>Opinion</th>
             </tr>
             <% @books.each do |book| %>
             <tr>
               <th>
                 <%= link_to book.title, "/books/#{book.id}" %>
               </th>
               <th><%= book.body %></th>
             </tr>
             <% end %>
           </table>

        </div>
      </div>

    </div>
  </maim>

  <footer>
    <p>CopyRight Infratop.inc</p>
  </footer>
</body>